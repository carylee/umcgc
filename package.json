{
  "name": "umcgc",
  "version": "1.0.0",
  "description": "Unofficial Website for UMC General Conference 2016",
  "main": "app.js",
  "scripts": {
    "lint": "eslint app.js",
    "start": "npm run build:js && npm run build:css && npm run build:html && serve .",
    "watch": "npm run watch:js & npm run watch:css & npm run build:html & serve .",
    "build:html": "cp index.html public/index.html",
    "build:css": "rework-npm app.css > public/bundle.css",
    "build:js": "browserify app.js -t babelify -o public/bundle.js",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "watch:js": "watchify --extension=.js app.js -o public/bundle.js --debug --verbose",
    "watch:css": "nodemon -e css --ignore bundle.css --exec 'rework-npm app.css -o public/bundle.css'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Cary Lee",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^3.3.6",
    "handlebars": "^4.0.5",
    "jquery": "^2.2.3"
  },
  "devDependencies": {
    "nodemon": "^1.9.1",
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-css": "^0.9.1",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^1.0.2",
    "eslint-plugin-react": "^5.0.1",
    "rework-npm": "^1.0.0",
    "rework-npm-cli": "^0.1.1",
    "watchify": "^3.7.0"
  }
}
